<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion - PathFinder</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
</head>
<body style="background-color: #f0f0e9;" class="vh-100">

<a href="/" class="btn btn-outline-dark btn-lg px-3 py-2 position-absolute top-0 start-0 m-3">
    <i class="bi bi-arrow-left"></i> Retour
</a>

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card p-5 shadow-lg text-dark col-md-6 col-lg-4">

        <h2 class="mb-4 text-center">Connexion</h2>

        <!-- Affichage des messages -->
        {% if success %}
            <div class="alert alert-success text-center" role="alert">
                {{ success }}
            </div>
        {% endif %}
        {% if error %}
            <div class="alert alert-danger text-center" role="alert">
                {{ error }}
            </div>
        {% endif %}

        <!-- Formulaire de connexion -->
        <form method="POST" action="{{ basePath }}/loginPlayer">
            <div class="mb-3">
                <label for="pseudo" class="form-label">Pseudo</label>
                <input type="text" class="form-control" id="pseudo" name="username" placeholder="Entrez votre pseudo" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Entrez votre mot de passe" required>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Se connecter</button>
            </div>
        </form>

        <a href="{{ basePath }}/register">
            <button type="button" class="btn btn-outline-info mt-4 w-100">Créer un compte</button>
        </a>

        <button type="button" class="btn btn-secondary mt-3 w-100" data-bs-toggle="modal" data-bs-target="#modalAdminConnection">Administrateurs</button>

    </div>

    <div class="modal fade" id="modalAdminConnection" tabindex="-1" aria-labelledby="modalAdminLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <!-- En-tête de la modal -->
                <div class="modal-header text-dark">
                    <h5 class="modal-title fw-bold" id="modalAdminLabel">Connexion Administrateur</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <!-- Formulaire -->
                <form method="POST" action="{{ basePath }}/admin/loginAdmin">
                    <div class="modal-body text-dark">
                        <!-- Champ pseudo -->
                        <div class="mb-4">
                            <label for="pseudo" class="form-label fw-bold">Pseudo</label>
                            <input type="text" class="form-control" id="pseudo" name="username" placeholder="Entrez votre pseudo" required>
                        </div>
                        <!-- Champ mot de passe -->
                        <div class="mb-4">
                            <label for="password" class="form-label fw-bold">Mot de passe</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Entrez votre mot de passe" required>
                        </div>
                    </div>
                    <!-- Boutons -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-primary">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

  <!-- Scripts Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</div>
</body>
</html>
