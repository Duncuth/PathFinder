<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Backoffice - PathFinder</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
</head>
<body class="vh-100" style="background-color: #1f2937; color: #ffffff;">

    <!-- Bouton de déconnexion -->
    <a href="/admin/logout" class="btn btn-outline-danger btn-lg px-2 py-1 position-absolute top-0 start-0 m-3">
        <i class="bi bi-box-arrow-right"></i> Déconnexion
    </a>


<!-- Contenu principal -->
  <div class="container" style="padding-top: 6rem;">

    <div class="d-flex justify-content-between">
      <h2 class="mb-0" style="font-size: 2.6rem;">Gestion des administrateurs</h2>
      <button type="button" class="btn btn-success mr-auto d-inline" style="margin-top: 1.7rem;" data-bs-toggle="modal" data-bs-target="#modalAdministrators">
        <i class="bi bi-plus"></i> Ajouter un administrateur
      </button>
    </div>

    <table class="table table-striped table-white mt-2" style="max-height: 33rem; overflow-y: auto;">
      <thead>
        <tr>
          <th class="ps-4">#</th>
          <th class="ps-4">Pseudo</th>
        </tr>
      </thead>
      <tbody>
      {% for admin in admins %}
        <tr>
            <td class="ps-4 fw-bold">{{admin.id}}</td>
            <td class="ps-4">{{admin.username}}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
    <div class="container mt-3 d-flex justify-content-between">
            <a type="button" href="/admin/adminPlayer" class="btn btn-secondary">← Joueurs</a>
            <a type="button" href="/admin/adminGraph" class="btn btn-secondary">Graphes →</a>
        </div>
  </div>

  <div class="modal fade" id="modalAdministrators">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <!-- En-tête de la modal -->
            <div class="modal-header text-dark">
                <h5 class="modal-title fw-bold" id="modalAdministratorsLabel">Ajouter un administrateur</h5>
            </div>
            <!-- Formulaire -->
            <form method="POST" action="/admin/administrators/addAdministrator">
                <div class="modal-body text-dark">
                    <!-- Champ Nom d'utilisateur -->
                    <div class="mb-3">
                        <label for="username" class="form-label text-dark">Nom d'utilisateur :</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Entrez un nom d'utilisateur" required>
                    </div>
                    <!-- Champ Mot de passe -->
                    <div class="mb-3">
                        <label for="password" class="form-label text-dark">Mot de passe :</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Entrez un mot de passe" required>
                    </div>
                </div>
                <!-- Pied de la modal -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                </div>
            </form>
        </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
